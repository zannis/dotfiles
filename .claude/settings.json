{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.command' | grep -qE '^cargo (check|clippy|test|build|c|t|b)' && cargo fix --allow-dirty --allow-staged"
          }
        ]
      }
    ]
  }
}
